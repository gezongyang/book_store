<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.atguigu.bookstore.dao.UserAuthorityMapper">
   
<select id="selectAuthorityByRole" resultType="long">
   select `authority_id` 
   from `bs_user_authority` 
   where `role` =#{role}
</select>

</mapper>
    